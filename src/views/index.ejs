<html>
    <head>
        <title>Redis Tasks</title>
        <link rel="stylesheet" href="https://bootswatch.com/4/cerulean/bootstrap.min.css">
        <style>
            .del:checked + span {
                color: red;
            }
            .task-list {
                list-style: none;
            }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Redis Tasks</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </nav>

        <div class="container">
            <form method="POST" action="/task/add">
                <label>Add Tasks</label>
                <input type="text" name="task" placeholder="Add Task">
                <input type="submit" value="Submit">
            </form>

            <h3><%= title %></h3>

            <form method="POST" action="/task/delete">
                <ul class="task-list">
                <% tasks.forEach(function(task) { %>
                    <li>
                        <label>
                            <input type="checkbox" name="tasks" class="del" value="<%= task %>">
                            <span><%= task %></span>
                        </label>
                    </li>
                <% }) %>
                </ul>
                <input type="submit" value="Remove">
            </form>

            <div class="card text-white bg-dark mb-3">
                <div class="card-header">Business Calls</div>
                <div class="card-body">
                    <h3 class="card-title">Next Call</h3>
                    <span>Name: </span><span>TODO: call.name</span><br>
                    <span>Company: </span><span>TODO: call.company</span><br>
                    <span>Phone: </span><span>TODO: call.phone</span><br>
                    <span>Time: </span><span>TODO: call.time</span><br>
                </div>
            </div>

            <div class="card text-white bg-dark mb-3">
                <div class="card-header">Business Calls</div>
                <div class="card-body">
                    <h3 class="card-title">Edit Next Call</h3>
                    <form method="POST" action="/call/add">
                        <label>Contact Name</label><br>
                        <input type="text" name="name" placeholder="Task Name">
                        <br><br>
                        <input type="text" name="company" placeholder="Company">
                        <br><br>
                        <label>Phone</label><br>
                        <input type="text" name="phone" placeholder="Phone">
                        <br><br>
                        <label>Day & Time</label><br>
                        <input type="text" name="time" placeholder="Time">
                        <br><br>
                        <input type="submit" value="Submit">
                    </form>
                </div>
            </div>

        </div>
    </body>
</html>